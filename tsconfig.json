{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6"
       ],
       "declaration": true,
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./dist",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "removeComments": true,
       "preserveConstEnums": true,
       "sourceMap": false
    },
    "include": [
      "./src/**/*"
   ],
   "exclude": [
      "./src/**/*.spec.ts"
   ]
 }